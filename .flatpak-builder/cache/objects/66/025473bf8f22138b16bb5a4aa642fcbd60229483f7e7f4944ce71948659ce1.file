[Application]
name=net.lutris.Lutris
runtime=org.gnome.Platform/i386/3.28
sdk=org.gnome.Sdk/i386/3.28
command=lutris

[Context]
shared=network;ipc;
sockets=x11;wayland;pulseaudio;
devices=dri;
filesystems=host;

[Extension net.lutris.Lutris.Debug]
directory=lib/debug
autodelete=true
no-autodownload=true

[Build]
built-extensions=net.lutris.Lutris.Debug;