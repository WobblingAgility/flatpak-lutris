+    int width, height;
+    cairo_t *cr;
+    HRESULT hr;
+
+    TRACE("(%p, %p, %d, %d, %p, %p)\n", htheme, hdc, part_id, state_id, rect, options);
+
+    if (libgtk3 == NULL)
